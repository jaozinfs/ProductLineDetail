        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <com.example.myapplication.ProductLineDetail.ProductLineDetail
            android:layout_width="0dp"
            android:layout_height="45dp"
            app:textPrincipal="assaasaa 222"
            app:textPrincipalSize="20sp"
            app:textValueSize="18sp"
            app:textValue="100%"
            app:textValueColor="@color/colorPrimaryDark"
            app:textPrincipalColor="@color/colorPrimary"
            app:lineDividerEnable="false"
            app:lineDividerColor="@color/textPrincipalColor"
            app:imageDrawable="@drawable/ic_announcement_black_24dp"
            android:id="@+id/customVIew"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="80dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <com.example.myapplication.ProductLineDetail.ProductLineDetail
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:text="Hello World!"
